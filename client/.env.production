# PesaGuru Production Environment Variables

# API Configuration
REACT_APP_API_URL=https://api.pesaguru.com/api
REACT_APP_WEBSOCKET_URL=wss://api.pesaguru.com/ws

# Authentication
REACT_APP_AUTH_STORAGE_KEY=pesaguru_auth_token
REACT_APP_TOKEN_EXPIRY_DAYS=5

# Features
REACT_APP_ENABLE_CHATBOT=true
REACT_APP_ENABLE_SWAHILI=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CONSOLE_LOGS=false
REACT_APP_ENABLE_ERROR_REPORTING=true

# Default Settings
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_DEFAULT_CURRENCY=KES
REACT_APP_DEFAULT_RISK_LEVEL=moderate

# UI Configuration
REACT_APP_PRIMARY_COLOR=#1E3A8A
REACT_APP_ACCENT_COLOR=#0EA5E9
REACT_APP_LOGO_URL=/images/pesaguru-logo.svg
REACT_APP_FAVICON_URL=/favicon.ico

# External APIs (these should be proxied through the backend for security)
REACT_APP_NSE_API_PROXY_ENDPOINT=/api/market/nse
REACT_APP_CBK_API_PROXY_ENDPOINT=/api/market/cbk
REACT_APP_FOREX_API_PROXY_ENDPOINT=/api/market/forex
REACT_APP_NEWS_API_PROXY_ENDPOINT=/api/market/news

# Performance
REACT_APP_CACHE_DURATION=1800
REACT_APP_MAX_RETRIES=2
REACT_APP_TIMEOUT_MS=15000

# Development Tools
REACT_APP_ENABLE_DEV_TOOLS=false
REACT_APP_MOCK_API=false

# Content Security
REACT_APP_CSP_ENABLED=true
REACT_APP_HSTS_ENABLED=true

# Analytics
REACT_APP_ANALYTICS_ID=REPLACE_WITH_ANALYTICS_ID